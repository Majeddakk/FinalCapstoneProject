        </section>

        <section class="tour-one tour-grid">
            <div class="container">
                <div class="tour-sorter-one">
                 
                    <div class="tour-sorter-one__right">
                        <div class="tour-sorter-one__select">
                            <select name="sort-by" id="sort-by" class="selectpicker">
                                <option value="Sort">Sort</option>
                                <option value="By Date">By Date</option>
                                <option value="By Price">By Price</option>
                            </select>
                        </div>
                       
                    </div>

                </div>
                <div>
             
                <% if (events.length > 0) { %>
                   
                            <% for (let event of events) { %>
                            <div class="tour-one__single" >
                                <div class="tour-one__image" >
                                    <img src="<%= event.image %>"   alt="">
                                    <a href="/vtrip/<%= event._id %>"><i class="fa fa-heart"></i></a>
                                </div>
                                <div  class="tour-one__content" >
                                    
                                    <p><span><%= event.pricePerPerson %>$</span>Per Person</p>
                                    <ul class="tour-one__meta list-unstyled">
                                        <li><a href="/vtrip/<%= event._id %>"><i class="far fa-clock"></i> <%= event.eventLength %></a></li>
                                        <li><a href="/vtrip/<%= event._id %>"><i class="far fa-user-circle"></i> <%= event.eventAgeRequired %></a></li>
                                        <li><a href="/vtrip/<%= event._id %>"><i class="far fa-map"></i> <%= event.location %></a></li>
                                   
                                    </ul>
                                </div>
                            </div>
                            
                            <% } %>
                        </div>
                        
                        <% } else {  %>
                            <h1>No Events found</h1>
                            <% } %>
        </section>

